{{#with style}}
	<style>
		{{#with background}}
			.event {
				{{#if color}}background-color: {{color}};{{/if}}
				{{#if image}}background-image: url({{image}});{{/if}}
			}
		{{/with}}
		{{#with text}}
			.event__body {
				{{#if color}}color: {{color}};{{/if}}
				{{#if fontBody}}font: {{fontBody}};{{/if}}
			}

			{{#if fontHeading}}
				.event__body h1 {
					font: {{fontHeading}};
				}
			{{/if}}
		{{/with}}
	</style>
{{/with}}
