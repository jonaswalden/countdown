$t-line-height = 1.4;

body {
	font-family: 'courier new', monospace;
	color: $c-text;
	line-height: $t-line-height;
}

h1 {
	margin-top: 0;
}

::selection {
	color: $c-highlight;
	background-color: $c-highlight-bg;
}

a,
a:visited {
	color: inherit;
}

a:focus,
a:active {
	color: $c-highlight;
	outline: none;
}
