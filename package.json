{
  "name": "countdown",
  "version": "1.0.0",
  "description": "0.1.0",
  "main": "app/app.js",
  "scripts": {
    "fixlint": "eslint --fix **/*.js",
    "lint": "eslint **/*.js",
    "start": "npm run serve:site",
    "test": "npm run lint & mocha test/**/*.js",
    "serve:dev": "run-p serve:site serve:assets",
    "serve:site": "node app/app.js",
    "serve:assets": "livereload . -p 3001 -e hbs -x app/assets/ -w 500",
    "build:scripts": "rollup -c rollup.config.js",
    "build:styles": "stylus -I app/assets/styles -I node_modules --include-css < app/assets/styles/main.styl | postcss -o resources/bundles/styles.css",
    "watch:assets": "run-p watch:styles watch:scripts",
    "watch:scripts": "chokidar app/assets/scripts/**/*.js -c \"npm run build:scripts -s\"",
    "watch:styles": "chokidar app/assets/styles/**/*.styl -c \"npm run build:styles -s\""
  },
  "author": "Jonas WaldÃ©n",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "express-handlebars": "^3.0.0",
    "gm": "^1.23.0",
    "helmet": "^3.0.0",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "method-override": "^2.3.9",
    "moment-duration-format": "^1.3.0",
    "mongoose": "^4.6.1",
    "multer": "^1.2.0",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-minify": "^0.2.0",
    "chai": "^3.5.0",
    "chai-spies": "^0.7.1",
    "cheerio": "^0.22.0",
    "chokidar-cli": "^1.2.0",
    "chronokinesis": "^1.3.2",
    "css-mqpacker": "^6.0.1",
    "cssnano": "^3.10.0",
    "eslint": "^3.9.0",
    "factory-girl": "^4.2.2",
    "livereload": "^0.6.2",
    "mocha": "^3.1.2",
    "mocha-cakes-2": "^2.1.0",
    "moment": "^2.18.1",
    "normalize-css": "^2.3.1",
    "normalize-styl": "^4.1.1",
    "npm-run-all": "^4.1.1",
    "postcss": "^6.0.9",
    "postcss-cli": "^4.1.0",
    "rollup": "^0.47.2",
    "rollup-plugin-babel": "^3.0.1",
    "rollup-plugin-commonjs": "^8.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "stylus": "^0.54.5",
    "supertest": "^3.0.0"
  }
}
